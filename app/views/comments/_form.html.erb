<%= form_with(model: comment) do |f| %>
  <div class="card">
    <div class="card-body">
      <%= f.hidden_field :project_id, value: params[:project] %>

      <div class="mb-3">
        <%= f.label :message, { class: "form-label"} %>
        <%= f.text_area :message, { class: "form-control", placeholder: "Add comment details here" } %>
      </div>

      <%= f.submit "Submit", class: "btn btn-primary" %>

    </div>
  </div>
<% end %>